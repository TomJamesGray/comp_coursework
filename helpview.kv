<HelpView>:
    ActionBar:
        width:root.width
        height:30
        size_hint:1,None
        pos:0,root.height-self.height
        ActionView:
            size_hint:1,None
            height:30
            use_seperator:True
            ActionPrevious:
                # Hide the default kivy icon in the action bar
                with_previous:False
                size_hint_x:None
                width:0
                app_icon_width:1
                app_icon_height:0
            CustomActionBtn:
                background_normal:""
                background_down:""
                text:"Close"
                font_size:"14px"
                color:1,1,1,1
                background_color:34/255,34/255,34/255,1
                on_press:app.stop()

    ScrollView:
        width:root.width
        height:root.height-30
        pos:0,0
        RstDocument:
            text:root.help_text
            color:0,0,0,1
            size_hint_x:1
            size_hint_y:None
            # height:root.height
            text_size:root.width,None
            # height:self.texture_size[1]
            # text_size:self.size
            valign:"top"
            padding:5,5