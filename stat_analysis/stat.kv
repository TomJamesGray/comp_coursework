<StatAnalysis>:
    width:root.width
    height:root.height
    ActionBar:
        width:root.width
        height:40
        size_hint_x:1
        pos:0,root.height-self.height
        ActionView:
            use_seperator:True
            ActionPrevious:
                with_previous:False
                size_hint_x:None
                width:0
                app_icon_width:1
                app_icon_height:0
            ActionButton:
                text:"Home"
            ActionButton:
                text:"Save"


    BoxLayout:
        orientation:"horizontal"
        spacing:5,5
        width:root.width
        height:root.height-40
        padding:5,5,0,5
        Splitter:
            sizable_from:"right"
            ActionsScroller:
                canvas.before:
                    Color:
                        rgba:(1,1,1,1)
                    Rectangle:
                        pos:self.pos
                        size:self.size
                size_hint_y:1
                size_hint_x:0.4
        GridLayout:
            cols:1
            padding:5,0,5,0
            spacing:5,5
            Splitter:
                sizable_from:"bottom"
                HomeView:
                    canvas.before:
                        Color:
                            rgba:app.accent_col
                        Rectangle:
                            pos:self.pos
                            size:self.size
                    size_hint_y:0.8
            LogView:
                canvas.before:
                    Color:
                        rgba:(1,1,1,1)
                    Rectangle:
                        pos:self.pos
                        size:self.size
                size_hint_y:0.2

<ScrollableLabel>:
    Label:
        color:0,0,0,1
        text:root.text
        font_size:12
        text_size:self.width,None
        size_hint_y:None
        height:self.texture_size[1]

<LogView>:
    cols:1
    Label:
        text:"Log"
        text_size:self.size
        valign:"middle"
        height:30
        size_hint_y:None
        color:(0,0,0,1)
        padding:5,0
        canvas.before:
            Color:
                rgba:app.accent_col
            Rectangle:
                pos:self.pos
                size:self.size
    ScrollableLabel:
        text:"HI"