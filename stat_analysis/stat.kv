<StatAnalysis>:
    primary_pane:primary_pane
    width:root.width
    height:root.height
    ActionBar:
        width:root.width
        height:40
        size_hint_x:1
        pos:0,root.height-self.height
        ActionView:
            use_seperator:True
            ActionPrevious:
                with_previous:False
                size_hint_x:None
                width:0
                app_icon_width:1
                app_icon_height:0
            ActionButton:
                text:"Home"
            ActionButton:
                text:"Save"


    BoxLayout:
        orientation:"horizontal"
        spacing:5,5
        width:root.width
        height:root.height-40
        padding:5,5,0,5
        Splitter:
            size_hint_x:None
            sizable_from:"right"
            max_size:300
            min_size:180
            rescale_with_parent:True
            ActionsScroller:
                primary_pane_edit:primary_pane
                canvas.before:
                    Color:
                        rgba:(1,1,1,1)
                    Rectangle:
                        pos:self.pos
                        size:self.size
                size_hint_y:1
        GridLayout:
            cols:1
            padding:5,0,5,0
            spacing:5,5
            Splitter:
                sizable_from:"bottom"
                PrimaryPane:
                    id:primary_pane
                    title:"Home"
                    canvas.before:
                        Color:
                            rgba:(1,1,1,1)
                        Rectangle:
                            pos:self.pos
                            size:self.size
                    HomeView:
                        size_hint_y:0.8
            LogView:
                canvas.before:
                    Color:
                        rgba:(1,1,1,1)
                    Rectangle:
                        pos:self.pos
                        size:self.size
                size_hint_y:0.2

<ScrollableLabel>:
    Label:
        color:0,0,0,1
        text:root.text
        font_size:12
        text_size:self.width,None
        size_hint_y:None
        height:self.texture_size[1]

<LogView>:
    cols:1
    TitlePane:
        title:"Log"
        height:30
        size_hint_y:None
    ScrollableLabel:
        text:"HI"

<PrimaryPane>:
    cols:1
    TitlePane:
        title:root.title
        height:30
        size_hint_y:None

<HomeView>:
    cols:1
    GridLayout:
        cols:1
        padding:15,15
        Button:
            text:"Import data set"
            size_hint_y:None
            size_hint_x:None
            height:35
            width:150
            padding:5,5
        Label:
            color:0,0,0,1
            text:"Saved Actions"
            size_hint_y:None
            valign:"middle"
            text_size:self.size
            height:40
            font_size:18

        GridLayout:
            size_hint_y:None
            size_hint_x:None
            width:400
            cols:3
            row_default_height:30
            row_force_default:True
            BorderedLabel:
                b_width:1
                padding:2,2
                size_hint_x:.4
                color:0,0,0,1
                text:"Name"
                text_size:self.size
                size:self.size
                pos:self.pos
                valign:"middle"
            BorderedLabel:
                b_width:1
                padding:2,2
                size_hint_x:.4
                color:0,0,0,1
                text:"Type"
                text_size:self.size
                valign:"middle"
            BorderedLabel:
                b_width:1
                padding:2,2
                size_hint_x:.2
                color:0,0,0,1
                text:"Status"
                text_size:self.size
                valign:"middle"
            BorderedLabel:
                b_width:1
                padding:2,2
                size_hint_x:.2
                color:0,0,0,1
                text:"Import 1"
                text_size:self.size
                valign:"middle"
            BorderedLabel:
                b_width:1
                padding:2,2
                size_hint_x:.2
                color:0,0,0,1
                text:"data.csv"
                text_size:self.size
                valign:"middle"
            BorderedLabel:
                b_width:1
                padding:2,2
                size_hint_x:.2
                color:0,0,0,1
                text:"OK"
                text_size:self.size
                valign:"middle"

<BorderedLabel>
    canvas.before:
        Color:
            rgba:0,0,0,1
        Rectangle:
            pos:self.x-self.b_width,self.y-self.b_width
            size:self.width+self.b_width*2,self.height+self.b_width*2
        Color:
            rgba:1,1,1,1
        Rectangle:
            pos:self.x,self.y
            size:self.width,self.height

<BorderedButton>
    canvas.before:
        Color:
            rgba:0,0,0,1
        Rectangle:
            pos:self.x-self.b_width,self.y-self.b_width
            size:self.width+self.b_width*2,self.height+self.b_width*2
        Color:
            rgba:1,1,1,1
        Rectangle:
            pos:self.x,self.y
            size:self.width,self.height


<ButtonDropDown>
    background_normal:""
    background_color:.9,.9,.9,1
    color:0,0,0,1
    b_width:1
    size_hint:None,None
    height:25
    size_hint_x:1
    text_size:self.size
    padding:5,5
    canvas.before:
        Color:
            rgba:0,0,0,1
        Rectangle:
            pos:self.x-self.b_width,self.y-self.b_width
            size:self.width+self.b_width*2,self.height+self.b_width*2
        Color:
            rgba:0,0,1,1
        Rectangle:
            pos:self.x,self.y
            size:self.width,self.height

<TitlePane>:
    Label:
        text:root.title
        text_size:self.size
        valign:"middle"
        pos:root.pos
        size:root.size
        color:(1,1,1,1)
        padding:5,0
        canvas.before:
            Color:
                rgba:app.title_pane_col
            Rectangle:
                pos:self.pos
                size:self.size

<ResultOutputWidget>:
    cols:1
    padding:5,5
    canvas.before:
        Color:
            rgba:.6,.6,.6,1
        Rectangle:
            pos:self.x,self.y+10
            size:1,self.height-20
    Label:
        text:"Result"
        size_hint:1,None
        text_size:self.size
        color:app.accent_col
        height:30
        font_size:"22"
        halign:"left"
